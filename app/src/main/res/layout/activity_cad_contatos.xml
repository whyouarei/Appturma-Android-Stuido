<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadContatos">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-25dp"
        android:background="#F7EAFB">:
    <TextView
        android:id="@+id/txtDadosPessoais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:text="Dados Pessoais"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"/>
        <TextView
            android:id="@+id/txtNomeContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginBottom="39dp"
            android:text="*Nome"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edtNomeContato"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNomeContato"

            android:layout_marginTop="-36dp"
            android:ems="10"
            android:inputType="textPersonName"/>

        <RelativeLayout
            android:id="@+id/relativeBotoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_below="@id/edtNomeContato">

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Salvar"/>

            <Button
                android:id="@+id/btnConsultarContato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnSalvar"
                android:layout_alignTop="@id/btnSalvar"
                android:text="Consultar"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>