<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Receitas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="0">

    <FrameLayout
        android:id="@+id/receitas_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="0">

        <RelativeLayout
            android:id="@+id/relativePreparo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textAlignment="center"/>
            <ImageView
                android:id="@+id/imageViewBacalhau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/bacalhau"/>
            <ImageView
                android:id="@+id/imageViewPreparo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                app:srcCompat="@drawable/preparo"/>
            <TextView
                android:id="@+id/textViewPreparo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/imageViewPreparo"
                android:layout_toRightOf="@+id/imageViewPreparo"
                android:text="2h30"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            <ImageView
                android:id="@+id/imageViewPorcao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="93dp"
                android:layout_marginRight="93dp"
                app:srcCompat="@drawable/porcao"/>
            <TextView
                android:id="@+id/textViewPorcao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:text="6 porções"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeIngredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativePreparo">
            <TextView
                android:id="@+id/textViewIngredientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="INGREDIENTES"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/textViewIngredienteslista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="27dp"
                android:text="-1 kg de bacalhau
\n-1/2 kg de batata
\n-1/2 kg de cenora
\n-2 cebolas grandes
\n-2 tomates (vermelho e/ou amarelo)
\n-1 pimentão
\n-Leite de coco
\n-Alho, sal, coentro e azeite de oliva a gosto
\n-Azeitonas
\n
\nMOLHO
\n-2 copos de leite
\n-1 colher de sopa de amido de milho
\n-1 colher de sopa de manteiga
\n-1 ovo
\n-1/2 xícara de creme de leite
\n-Noz-moscada, pimenta-do-reino e sal"
android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeIngredientes">

            <TextView
                android:id="@+id/textViewDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Bacalhau"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="90dp"/>

            <TextView
                android:id="@+id/textViewDescricaoPreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/textViewDescricao"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="R$ 29,99 / kg"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeDescricao">
            <ImageView
                android:id="@+id/imageViewProduto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:contentDescription="baca"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bacalhau02"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
</ScrollView>